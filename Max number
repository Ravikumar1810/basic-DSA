public class MaxInArray {
    public static void main(String[] args) {
        int[] numbers = {10, 20, 5, 40, 15};

        int max = numbers[0];

        for (int i = 1; i < numbers.length; i++) {
            if (numbers[i] > max) {
                max = numbers[i];
            }
        }

        System.out.println("The maximum number in the array is: " + max);
    }
}
